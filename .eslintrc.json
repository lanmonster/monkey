{
    "env": {
        "node": true,
        "jest": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "max-len": ["error", {
            "code": 120
        }],
        "indent": [
            "error",
            4
        ],
        "no-nested-ternary": "off"
    }
}